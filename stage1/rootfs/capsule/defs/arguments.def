/*		--argument,		function,		description */
arg_param(	"",			handle_cmd,		"Command to run within the container, any subsequent arguments are ignored by capsule and forwarded varbatim.")
arg_param(	"bind",			handle_bind,		"Bind-mount a file or directory from the host into the container, specify as \"host_path:container_path\".")
arg_param(	"bind-ro",		handle_bind_ro,		"Bind-mount a file or directory from the host into the container read-only, specify as \"host_path:container_path\".")
arg_param(	"blacklist",		handle_blacklist,	"Comma-separated list of blacklisted syscalls via seccomp, see --help-blacklist.")
arg_param(	"capability",		handle_caps,		"Comma-separated list of additional capabilities to grant the container, see --help-capabilities.")
arg_param(	"directory",		handle_directory,	"Directory to use as the container root.")
arg_param(	"drop-capability",	handle_drop_caps,	"Comma-separated list of capabilities to drop from the container, see --help-capabilities.")
arg(		"help",			handle_help,		"Display help and exit.")
arg(		"help-blacklist",	handle_blacklist_help,	"Display supported and default blacklist names and exit.")
arg(		"help-capabilities",	handle_caps_help,	"Display supported and default capabilities and exit.")
arg(		"help-namespaces",	handle_ns_help,		"Display supported and default namespaces and exit.")
arg_param(	"hostname",		handle_hostname,	"Hostname to use for the container, basename of --directory used otherwise.")
arg_param(	"keep-fd",		handle_keep_fd,		"File descriptor number to retain for the lifetime of the process.")
arg_param(	"namespaces",		handle_namespaces,	"Explicit set of new namespaces to create for the container, see --help-namespaces.")
arg(		"no-pty",		handle_nopty,		"Suppress pty and session creation, use with care.")
arg(		"parent-isig",		handle_parent_isig,	"Retain termios.c_lflag=ISIG in parent tty, default defers to the slave pty, inapplicable to --no-pty.")
arg_param(	"pid-file",		handle_pidfile,		"File to write the container's init PID out to.")
arg(		"quiet",		handle_quiet,		"Suppress output generated by capsule.")
arg_param(	"tmpfs",		handle_tmpfs,		"Mount a tmpfs into the container, specify as \"container_path\" or \"container_path:options\".")
arg_param(	"uuid",			handle_uuid,		"UUID for container.")

#undef arg
#undef arg_param
